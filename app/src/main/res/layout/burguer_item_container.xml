<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/fotoburguer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@color/black"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvprecio"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/icon_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="25€"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvprecio"
        android:gravity="center"
        tools:text="Nombre"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvdescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvnombre"
        tools:text="Hamburguesa clásica para los niños. Ingredientes de primera calidad que harán que se chupen los dedos!!" />

    <LinearLayout
        android:id="@+id/linearing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvdescripcion"
       android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@color/marron">
    <TextView
        android:id="@+id/tvingrediente1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvdescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="Ingrediente 1"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvingrediente2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvingrediente1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="Ingrediente 2"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvingrediente3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvingrediente2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="Ingrediente 3"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvingrediente4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvingrediente3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="Ingrediente 4"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvingrediente5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvingrediente4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        tools:text="Ingrediente 5"
        android:textColor="@color/white"
        android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btneditar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_editar"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/btncarrito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_addcarro" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>