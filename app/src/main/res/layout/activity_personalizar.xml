<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/fotoburguer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@color/black"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvprecio"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/icon_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="25â‚¬"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tvnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvprecio"
        app:layout_constraintBottom_toTopOf="@id/tvdescripcion"
        android:gravity="center"
        tools:text="Nombre"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvdescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvnombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:text="PERSONALIZA TU HAMBURGUESA"
        android:textStyle="italic"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvdescripcion"
        android:background="@color/marron">
    <CheckBox
        android:id="@+id/cbingrediente1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvdescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="Ingrediente 1"
        android:textColor="@color/white"
        android:gravity="center"
        android:checked="true"/>
    <CheckBox
        android:id="@+id/cbingrediente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbingrediente1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="Ingrediente 2"
        android:textColor="@color/white"
        android:gravity="center"
        android:checked="true"/>
    <CheckBox
        android:id="@+id/cbingrediente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbingrediente2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="Ingrediente 3"
        android:textColor="@color/white"
        android:gravity="center"
        android:checked="true"/>
    <CheckBox
        android:id="@+id/cbingrediente4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbingrediente3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="Ingrediente 4"
        android:textColor="@color/white"
        android:gravity="center"
        android:checked="true"/>
    <CheckBox
        android:id="@+id/cbingrediente5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cbingrediente4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="Ingrediente 5"
        android:textColor="@color/white"
        android:gravity="center"
        android:checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnhome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/btnaddcarro"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_addcarro"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/btnctramitar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_carrito"/>
        <ImageView
            android:id="@+id/btnpagar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/creditcard"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>